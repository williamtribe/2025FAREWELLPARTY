modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
VITE_API_BASE_URL = ""
NEXT_PUBLIC_BASE_URL = "http://localhost:8000"
KAKAO_REDIRECT_URI = "http://localhost:5000/api/auth/kakao/callback"
PINECONE_INDEX = "members"
PINECONE_ENVIRONMENT = "us-east-1"
OPENAI_EMBED_MODEL = "text-embedding-3-large"
SESSION_TTL_SECONDS = "604800"
APP_SECRET = "${SESSION_SECRET}"

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "start.sh"]
