modules = ["nodejs-20", "web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["imagemagick"]

[userenv]

[userenv.shared]
VITE_API_BASE_URL = ""
NEXT_PUBLIC_BASE_URL = "https://2025-farewellparty--turtle816.replit.app"
KAKAO_REDIRECT_URI = "https://2025-farewellparty--turtle816.replit.app/api/auth/kakao/callback"
PINECONE_INDEX = "members"
PINECONE_ENVIRONMENT = "us-east-1"
OPENAI_EMBED_MODEL = "text-embedding-3-large"
SESSION_TTL_SECONDS = "604800"
APP_SECRET = "${SESSION_SECRET}"

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 5000"]
build = ["npm", "--prefix", "frontend", "run", "build"]
